---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import { contentfulClient } from "../../lib/contentful";
import { documentToHtmlString } from "@contentful/rich-text-html-renderer";
import type { PortfolioItem } from "../../lib/contentful";
import {Image} from 'astro:assets';

export async function getStaticPaths() {
    const entries = await contentfulClient.getEntries<PortfolioItem>({
        content_type: "portfolioItem",
    });

    const pages = entries.items.map((item) => ({
        params: { slug: item.fields.slug },
        props: {
            project: item.fields.project,
            description: item.fields.description,
            tech: item.fields.tech,
            role: item.fields.role,
            demoUrl: item.fields.demoUrl,
            imageUrl: item.fields.imageUrl,
            slug: item.fields.slug,
            caseStudyMedia: item.fields.caseStudyMedia,
        },
    }));
    return pages;
}

const { project, description, slug, tech, role, demoUrl, imageUrl, caseStudyMedia } = Astro.props

const images = caseStudyMedia.map(item => item.fields.file.url);

const links = ['work', 'about', 'contact'];
---
<Layout title={project}>
    <Navigation title={project} links={links}/>
    <div class="case-study">
        <Image src={imageUrl} alt="picture" width="512" height="512" transition:name={`${slug}-thumbnail`}/>
        <video class="scroll" data-speed="1.5" src={images[0]} autoplay loop muted playsinline>
            <source src={images[0]} type="video/mp4" />
        </video>
        {images.map((image, index) => {
            if (index !== 0) {
                return <Image class="scroll" data-speed="1.75" src={image} alt={`picture-${index}`} width="512" height="512" transition:name={`${slug}-image-${index}`}/>
            }
        })}
        <p>{description}</p>
        <p><strong>{role}</strong></p>
    </div>
</Layout>

<script type="module">
        const parallax = () => {
        const scrollElements = document.querySelectorAll('.scroll');

        window.addEventListener('scroll', () => {
            const offset = window.scrollY / 10;

            scrollElements.forEach((element, index) => {
                if(index % 2 === 0) {
                    element.style.transform = `translateY(-${offset * element.dataset.speed}px)`;
                } else {
                    element.style.transform = `translateY(${offset * element.dataset.speed * .5}px)`;
                }
            })
        })
    };

    parallax();
</script>

<style>.case-study {
    display: grid;
    grid-template-columns: repeat(8, 1fr);
    grid-template-rows: repeat(10, auto);
    width: calc(100% - 48px);
    margin: 0 auto;
}

@media (max-width: 768px) {
    .case-study {
        grid-template-columns: repeat(2, 1fr);
        width: 100%;
        padding: 24px;
    }
}

video {
    grid-row-start: 2;
    grid-row-end: 4;
    grid-column-start: 4;
    grid-column-end: 8;
    width: 50vw;
    margin-top: -10%;
    z-index: 0;
}

@media (max-width: 768px) {
    video {
        grid-column-start: 1;
        grid-row-start: 3;
        width: 75%;
        margin-inline-start: 15%;
        margin-top: -5%;
    }
}

img {
    display: flex;
    width: 25vw;
    height: auto;
}

@media (max-width: 768px) {
    img {
        width: 50vw;
    }
}

img:nth-child(1) {
    grid-row-start: 1;
    grid-row-end: 1;
    grid-column-start: 1;
    grid-column-end: 1;
    border-radius: 12px;
    max-width: 300px;
}

img:nth-child(3) {
    grid-row-start: 3;
    grid-row-end: 5;
    grid-column-start: 2;
    grid-column-end: 7;
    z-index: 2;

    @media (max-width: 768px) {
        grid-column-start: 1;
        grid-row-start: 5;
        margin-top: -10%;
    }
}

img:nth-child(4) {
    grid-row-start: 5;
    grid-row-end: 6;
    grid-column-start: 1;
    grid-column-end: 4;

    @media (max-width: 768px) {
        grid-column-start: 2;
        grid-row-start: 7;
        grid-row-end: 9;
        margin-top: 10%;
        margin-inline-start: -25%;
    }
}

img:nth-child(5) {
    grid-row-start: 7;
    grid-row-end: 9;
    grid-column-start: 5;
    grid-column-end: 8;
    margin-top: 50px;

    @media (max-width: 768px) {
        grid-column-start: 1;
        grid-row-start: 9;
    }
}

img:nth-child(6) {
    grid-row-start: 8;
    grid-row-end: 10;
    grid-column-start: 2;
    grid-column-end: 5;

    @media (max-width: 768px) {
        grid-column-start: 2;
        grid-row-start: 10;
        margin-top: -15%;
        margin-inline-start: -25%;
    }
}

p:nth-child(7) {
    grid-row-start: 5;
    grid-column-start: 5;
    grid-column-end: 8;
    display: flex;

    @media (max-width: 768px) {
        grid-column-start: 1;
        grid-column-end: 3;
        grid-row-start: 6;
        font-size: 1.25em;
        width: calc(100% - 48px);
        margin-top: 15%;
        margin-bottom: 35%;
    }
}

p:nth-child(8) {
    grid-row-start: 1;
    grid-column-start: 2;
    grid-column-end: 8;
    display: flex;
    margin-inline-start: 1em;
    font-size: 2em;

    @media (max-width: 768px) {
        font-size: 1.5em;
        width: calc(100% - 48px);
    }
}
</style>