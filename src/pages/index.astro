---
import Layout from '../layouts/Layout.astro';
import {fade} from 'astro:transitions';
import { Image } from 'astro:assets';
import me from "../images/tim.jpg";
---
<Layout title="Home">
	<article class="home-nav">
			<h1 transition:animate={fade({duration: '0.5s'})} href="/">TIM&nbsp;HILTON</h1>
			<a transition:name="about" href="/about">ABOUT</a>
			<a transition:name="work" href="/work">WORK</a>
			<a transition:name="contact" href="/contact">CONTACT</a>

			<div transition:name="portrait" class="img-wrap">
				<Image src={me} alt="Tim Hilton" class="portrait"/>
			</div>
	</article>
</Layout>

<style>	
	.home-nav {
		margin: auto;
		color: white;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		width: 100%;
	}

	.home-nav a, .home-nav h1 {
		text-decoration: none;
		color: #f5f5f5;
		font-family: 'Galano';
		font-size: 6em;
		font-weight: 300;
		line-height: 1;
		padding: 0;
	}

	.home-nav a::after, .home-nav h1::after {
		content: '';
		position: absolute;
		width: 100%;
		height: 1px;
		background: #f5f5f5;
		left: 0;
		margin-top: 0.95em;
	}

	.home-nav h1::before {
		content: '';
		position: absolute;
		width: 100%;
		height: 1px;
		background: #f5f5f5;
		left: 0;
		margin-top: -0.05em;
	}

	.home-nav h1 {
		letter-spacing: 5vw;
	}

	.home-nav a:nth-child(2) {
		transform: translateX(25%);
	}	
	.home-nav a:nth-child(2)::after {
		transform: translateX(-25%);
	}	
	.home-nav a:nth-child(3) {
		transform: translateX(20%)
	}
	.home-nav a:nth-child(3)::after {
		transform: translateX(-20%);
	}
	.home-nav a:nth-child(4) {
		transform: translateX(45%);
	}
	.home-nav a:nth-child(4)::after {
		transform: translateX(-45%);
	}

	.portrait {
		width: 100%;
		height: auto;
	}

	.img-wrap {
		width: 336px;
		height: 336px;
		margin-top: -72px;
		margin-inline-start: 72px;
		border-radius: 50%;
		overflow: hidden;
		z-index: 1;
		border: 2px solid #f5f5f5;
	}
</style>
