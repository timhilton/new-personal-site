---
import Layout from '../layouts/Layout.astro';
import {fade} from 'astro:transitions';
import { Image } from 'astro:assets';
import me from "../images/tim.jpg";
---
<Layout title="Home">
	<article class="home-nav">
			<h1 transition:animate={fade({duration: '0.5s'})}>TIM&nbsp;HILTON</h1>
			<a transition:name="about" href="/about" aria-label="go to about page">ABOUT</a>
			<a transition:name="work" href="/work" aria-label="go to work page">WORK</a>
			<a transition:name="contact" href="/contact" aria-label="go to work page">CONTACT</a>

			<div transition:name="portrait" class="img-wrap">
				<Image src={me} alt="Tim Hilton" class="portrait"/>
			</div>
	</article>
</Layout>

<style>	
	.home-nav {
		margin: auto;
		color: white;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		width: 100%;
		overflow: hidden;
	}

	.home-nav a, .home-nav h1 {
		text-decoration: none;
		position: relative;
		color: var(--text);
		font-family: 'Galano', sans-serif;
		font-size: 6em;
		font-weight: 300;
		line-height: 1;
		padding: 0;

		@media (max-width: 768px) {
			font-size: 3em;
		}
	}

	.home-nav a::after, 
	.home-nav h1::after {
		content: '';
		position: absolute;
		height: 1px;
		background: var(--text);
		width: 100%;
		left: 0;
		margin-top: 0.95em;
	}

	.home-nav h1 {
		letter-spacing: 5vw;

		@media (max-width: 768px) {
			letter-spacing: 3vw;
		}
	}

	.home-nav a:nth-child(2) {
		transform: translateX(25%);
	}

	.home-nav a:nth-child(2)::after {
		transform: translateX(-25%);
	}

	.home-nav a:nth-child(3) {
		transform: translateX(20%);
	}

	.home-nav a:nth-child(3)::after {
		transform: translateX(-20%);
	}

	.home-nav a:nth-child(4) {
		transform: translateX(35%);
	}

	.home-nav a:nth-child(4)::after {
		transform: translateX(-35%);
	}

	.portrait {
		width: 100%;
		height: auto;
	}

	.img-wrap {
		width: 336px;
		height: 336px;
		margin-top: -72px;
		margin-inline-start: 72px;
		border-radius: 50%;
		overflow: hidden;
		z-index: 1;
		border: 2px solid #f5f5f5;

		@media (max-width: 768px) {
			width: 168px;
			height: 168px;
			margin-top: -18px;
			margin-inline-start: 12px;
		}
	}
</style>
