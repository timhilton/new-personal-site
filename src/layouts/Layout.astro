---
import '../styles/global.css';
import Footer from '../components/Footer.astro';
import { ViewTransitions } from 'astro:transitions';
interface Props {
	title: string;
}

const { title } = Astro.props;
const pageTitle = "Tim Hilton"
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Tim Hilton - web developer" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="robots" content="noindex,nofollow" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preload" href="/fonts/Vazirmatn-Bold.ttf" as="font" type="font/ttf" crossorigin ></link>
		<link rel="preload" href="/fonts/Vazirmatn-Thin.ttf" as="font" type="font/ttf" crossorigin ></link>
		<link rel="preload" href="/fonts/GalanoGrotesque-Extra-Light.otf" as="font" type="font/otf" crossorigin ></link>
		<link rel="preload" href="/fonts/OpenSans-Regular.ttf" as="font" type="font/ttf" crossorigin ></link>
		<link rel="preload" href="/fonts/OpenSans-Light.ttf" as="font" type="font/ttf" crossorigin ></link>
		<title>{pageTitle} - {title}</title>
		<ViewTransitions />
	</head>
	<body>
		<main class="container">
			<section class="content">
				<slot />
			</section>
			<Footer />
		</main>
	</body>
</html>
