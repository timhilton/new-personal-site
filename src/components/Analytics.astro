---

const id = `${import.meta.env.PUBLIC_GOOGLE_ANALYTICS}`;
---

<script is:inline async src={`https://www.googletagmanager.com/gtag/js?id=${id}`}></script>

<script is:inline>
  window.dataLayer = window.dataLayer || [];
  function gtag() {
    window.dataLayer.push(arguments);
  }
  gtag("js", new Date());
  gtag("config", `${id}`);
</script>
