---
import Icon from './Icon.astro';
import A from './A.astro';

const icons = [
    'github',
    'linkedin',
    'resume',
    'spotify'
]
---
<style>
    footer {
      display: flex;
      justify-content: space-between;
      align-items: center;
      height: 8rem;
      position: absolute;
      bottom: 0;
      width: calc(100% - 48px);
      color: #f5f5f5;
      margin-inline-start: 24px;
    }

    .social {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        align-items: center;
        justify-content: center;
    }

    a {
        width: 36px;
        height: 36px;
    }

    .built-with {
        flex-basis: 100%;
        width: 100%;
        height: 4em;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
    }

    .astro-built {
        height: 1.5em;
    }   

    .footer-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
        flex-wrap: wrap;
        width: 100%;
    }

    p {
        line-height: 1;
        margin: 0;
    }
</style>

<footer>
    <div class="footer-content">
    <div class="built-with">
        <p class="astro-built"><strong>Built using Astro <A/></strong></p>
        <p>Best viewed on Chrome on desktop.</p>
    </div>
    <p>&#169; {new Date().getFullYear()} Tim Hilton</p>
    <div class="social">
    {icons.map((icon) => <a href="#"><Icon icon={icon}/></a>)}
    </div>
    </div>
</footer>